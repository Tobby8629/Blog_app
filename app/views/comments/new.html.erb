<%= link_to 'Back', :back %>
<h3> add comment </h3>
<%= form_with model: @comment, url: post_comments_path(post_id: @post) do |form| %>
 <div class="input">
   <%= form.label :comment %>
   <%= form.text_area :comment, placeholder: "your comment....", required: true%>
 </div>
 <%= form.submit%>
<%end%>