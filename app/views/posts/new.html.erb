<%= render "shared/sign" %>
<h3>create a new post</h3>
<%= link_to 'Back', :back %>
<%= form_with model: @post, url:user_posts_path do |form| %>
  <div class="input">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "your title...", required: true%>
  </div>
  <div class="input">
    <%= form.label  :text %>
    <%= form.text_area :text, placeholder: "your text...", required: true%>
  </div>
  <%= form.submit "create post", disabled_with: "please wait"%>
<%end%>