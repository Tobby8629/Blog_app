<div class="fff">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true,  placeholder: "name",autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true,  placeholder: "email",autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.text_area :bio, autofocus: true,  placeholder: "bio",autocomplete: "bio" %>
    </div>

    <div class="field">
      <%= f.label :photo, class: "label" %><br />
      <%= f.file_field :photo, autofocus: true,  placeholder: "photo", autocomplete: "photo" %>
    </div>

    <div class="field">
      <%= f.label :posts_counter, class: "label" %><br />
      <%= f.number_field :posts_counter, value: 0, autofocus: true, placeholder: "posts_counter",autocomplete: "posts_counter" %>
    </div>

    <div class="field">
       <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password,  placeholder: "password",autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation,  placeholder: "confirm password",autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <p class='reg'> Already have an account? <%= link_to "log in", new_user_session_path %> </p>
<div>
